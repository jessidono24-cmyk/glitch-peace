{
  "$schema": "https://capacitorjs.com/docs/config",
  "appId": "com.glitchpeace.app",
  "appName": "GLITCHÂ·PEACE",
  "webDir": "dist",
  "bundledWebRuntime": false,
  "server": {
    // androidScheme "https" routes all WebView traffic through HTTPS, which is
    // required for secure cookies and fetch() in modern Android WebViews.
    // No Digital Asset Links (assetlinks.json) are needed for local Capacitor content
    // because Capacitor serves the web app from its own in-process server, not a
    // real domain. Set up Digital Asset Links only if you add Android App Links for
    // deep-linking into the app from external URLs.
    "androidScheme": "https"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 1500,
      "launchAutoHide": true,
      "backgroundColor": "#01010a",
      "androidSplashResourceName": "splash",
      "androidScaleType": "CENTER_CROP",
      "showSpinner": false
    },
    "StatusBar": {
      "style": "Dark",
      "backgroundColor": "#01010a"
    },
    "Keyboard": {
      "resize": "body",
      "style": "dark"
    }
  },
  "ios": {
    "scheme": "GlitchPeace",
    "contentInset": "automatic"
  },
  "android": {
    "allowMixedContent": false,
    "captureInput": true,
    "webContentsDebuggingEnabled": false
  }
}
